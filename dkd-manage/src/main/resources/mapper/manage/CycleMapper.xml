<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dkd.manage.mapper.CycleMapper">
    
    <resultMap type="Cycle" id="CycleResult">
        <result property="id"    column="id"    />
        <result property="nodeId"    column="node_id"    />
        <result property="addr"    column="addr"    />
        <result property="businessType"    column="business_type"    />
        <result property="regionId"    column="region_id"    />
        <result property="vmTypeId"    column="vm_type_id"    />
        <result property="longitudes"    column="longitudes"    />
        <result property="latitude"    column="latitude"    />
        <result property="clientId"    column="client_id"    />
        <result property="policyId"    column="policy_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectCycleVo">
        select id, node_id, addr, business_type, region_id, vm_type_id, longitudes, latitude, client_id, policy_id, create_time, update_time from tb_cycle
    </sql>

    <select id="selectCycleList" parameterType="Cycle" resultMap="CycleResult">
        <include refid="selectCycleVo"/>
        <where>  
            <if test="nodeId != null "> and node_id = #{nodeId}</if>
            <if test="businessType != null "> and business_type = #{businessType}</if>
            <if test="regionId != null "> and region_id = #{regionId}</if>
            <if test="vmTypeId != null "> and vm_type_id = #{vmTypeId}</if>
        </where>
    </select>
    
    <select id="selectCycleById" parameterType="Long" resultMap="CycleResult">
        <include refid="selectCycleVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertCycle" parameterType="Cycle" useGeneratedKeys="true" keyProperty="id">
        insert into tb_cycle
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="nodeId != null">node_id,</if>
            <if test="addr != null">addr,</if>
            <if test="businessType != null">business_type,</if>
            <if test="regionId != null">region_id,</if>
            <if test="vmTypeId != null">vm_type_id,</if>
            <if test="longitudes != null">longitudes,</if>
            <if test="latitude != null">latitude,</if>
            <if test="clientId != null">client_id,</if>
            <if test="policyId != null">policy_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="nodeId != null">#{nodeId},</if>
            <if test="addr != null">#{addr},</if>
            <if test="businessType != null">#{businessType},</if>
            <if test="regionId != null">#{regionId},</if>
            <if test="vmTypeId != null">#{vmTypeId},</if>
            <if test="longitudes != null">#{longitudes},</if>
            <if test="latitude != null">#{latitude},</if>
            <if test="clientId != null">#{clientId},</if>
            <if test="policyId != null">#{policyId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateCycle" parameterType="Cycle">
        update tb_cycle
        <trim prefix="SET" suffixOverrides=",">
            <if test="nodeId != null">node_id = #{nodeId},</if>
            <if test="addr != null">addr = #{addr},</if>
            <if test="businessType != null">business_type = #{businessType},</if>
            <if test="regionId != null">region_id = #{regionId},</if>
            <if test="vmTypeId != null">vm_type_id = #{vmTypeId},</if>
            <if test="longitudes != null">longitudes = #{longitudes},</if>
            <if test="latitude != null">latitude = #{latitude},</if>
            <if test="clientId != null">client_id = #{clientId},</if>
            <if test="policyId != null">policy_id = #{policyId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCycleById" parameterType="Long">
        delete from tb_cycle where id = #{id}
    </delete>

    <delete id="deleteCycleByIds" parameterType="String">
        delete from tb_cycle where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>